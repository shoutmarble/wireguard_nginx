# Global settings (optional, adjust as needed)
events {
    worker_connections 1024;
}

# HTTP block for HTTP/HTTPS and WebSocket traffic
http {
    access_log /var/log/nginx/access.log;
    error_log /var/log/nginx/error.log debug;

    server {
        listen 80;
        server_name app1.landingdev.xyz;
        location / {
            proxy_pass http://10.13.13.2:80;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        }
    }

    server {
        listen 80;
        server_name who.landingdev.xyz;
        return 301 https://$host$request_uri;
    }

    server {
        listen 443 ssl;
        server_name who.landingdev.xyz;

        ssl_certificate /etc/nginx/ssl/landingdev.xyz.pem;
        ssl_certificate_key /etc/nginx/ssl/landingdev.xyz.key;

        location / {
            proxy_pass http://10.13.13.2:80;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
        }
    }

}
